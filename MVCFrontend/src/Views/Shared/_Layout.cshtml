<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gov2Biz License Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <style>
        body { min-height: 100vh; display: flex; flex-direction: column; }
        .main-content { flex: 1; }
        .navbar-brand { font-weight: bold; font-size: 1.5rem; }
        .card { box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075); margin-bottom: 1.5rem; }
        footer { background-color: #f8f9fa; padding: 1.5rem 0; margin-top: 3rem; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary mb-4">
            <div class="container">
                <a class="navbar-brand" href="/"><i class="bi bi-shield-check"></i> Gov2Biz</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("JwtToken") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Licenses"><i class="bi bi-file-earmark-text"></i> My Licenses</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @Context.Session.GetString("UserEmail")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><span class="dropdown-item-text text-muted">Tenant: @Context.Session.GetString("TenantId")</span></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a href="/Login/Logout" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="/Login"><i class="bi bi-box-arrow-in-right"></i> Login</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Login/Register"><i class="bi bi-person-plus"></i> Register</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container main-content">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        <main role="main">@RenderBody()</main>
    </div>
    <footer class="border-top">
        <div class="container text-center">
            <p class="text-muted mb-0">&copy; 2024 Gov2Biz License Management System. All rights reserved.</p>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/auth.js"></script>
    <script>
        // Global: Sync session to localStorage on every page load
        $(document).ready(function() {
            @if (Context.Session.GetString("JwtToken") != null)
            {
                <text>
                var jwtToken = '@Context.Session.GetString("JwtToken")';
                var userEmail = '@Context.Session.GetString("UserEmail")';
                var userRoles = '@Context.Session.GetString("UserRoles")';
                var tenantId = '@Context.Session.GetString("TenantId")';
                var userId = @Context.Session.GetInt32("UserId");
                
                if (jwtToken && jwtToken !== '') {
                    AuthService.setAuthData({
                        accessToken: jwtToken,
                        email: userEmail,
                        roles: userRoles ? userRoles.split(',') : [],
                        tenantId: tenantId,
                        userId: userId
                    });
                    console.log('Session synced to localStorage');
                }
                </text>
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
