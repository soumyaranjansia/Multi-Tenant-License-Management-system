@{
    var payment = ViewBag.Payment as PaymentDetailsDto;
    var license = ViewBag.License as LicenseDto;
    ViewData["Title"] = "Payment Invoice";
    Layout = null; // No layout for print
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice - @payment.InvoiceId</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 40px;
            background: #f8f9fa;
        }
        .invoice-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        .header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 3px solid #0d6efd;
        }
        .header h1 {
            color: #0d6efd;
            margin: 0;
            font-size: 2.5rem;
        }
        .header p {
            color: #6c757d;
            margin: 5px 0;
        }
        .invoice-number {
            font-size: 1.5rem;
            font-weight: bold;
            color: #0d6efd;
            margin-top: 10px;
        }
        .info-section {
            margin: 30px 0;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
        }
        .info-section h4 {
            color: #495057;
            margin-bottom: 15px;
            font-size: 1.1rem;
            border-bottom: 2px solid #dee2e6;
            padding-bottom: 10px;
        }
        .info-row {
            display: flex;
            padding: 8px 0;
            border-bottom: 1px solid #e9ecef;
        }
        .info-row:last-child {
            border-bottom: none;
        }
        .info-label {
            font-weight: 600;
            width: 40%;
            color: #495057;
        }
        .info-value {
            width: 60%;
            color: #212529;
        }
        .items-table {
            width: 100%;
            margin: 30px 0;
            border-collapse: collapse;
        }
        .items-table thead {
            background: #0d6efd;
            color: white;
        }
        .items-table th {
            padding: 15px;
            text-align: left;
            font-weight: 600;
        }
        .items-table td {
            padding: 15px;
            border-bottom: 1px solid #dee2e6;
        }
        .total-section {
            text-align: right;
            margin: 30px 0;
            padding: 20px;
            background: #e7f3ff;
            border-radius: 8px;
        }
        .total-label {
            font-size: 1.3rem;
            font-weight: 600;
            color: #495057;
        }
        .total-amount {
            font-size: 2rem;
            font-weight: bold;
            color: #198754;
        }
        .status-badge {
            display: inline-block;
            padding: 8px 20px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 1rem;
        }
        .status-completed {
            background: #d1e7dd;
            color: #0f5132;
        }
        .footer {
            margin-top: 40px;
            text-align: center;
            color: #6c757d;
            font-size: 0.9rem;
            padding-top: 20px;
            border-top: 1px solid #dee2e6;
        }
        .action-buttons {
            text-align: center;
            margin: 20px 0;
        }
        @@media print {
            body {
                background: white;
                padding: 0;
            }
            .invoice-container {
                box-shadow: none;
                padding: 20px;
            }
            .action-buttons {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="header">
            <h1>üèõÔ∏è Gov2Biz</h1>
            <p>License Management System</p>
            <p class="invoice-number">@payment.InvoiceId</p>
            <div class="mt-3">
                @if (payment.PaymentStatus == "Completed")
                {
                    <span class="status-badge status-completed">‚úì PAID</span>
                }
            </div>
        </div>

        <div class="info-section">
            <h4>Invoice Details</h4>
            <div class="info-row">
                <div class="info-label">Invoice Date:</div>
                <div class="info-value">@payment.CreatedAt.ToString("MMMM dd, yyyy")</div>
            </div>
            <div class="info-row">
                <div class="info-label">Invoice ID:</div>
                <div class="info-value">@payment.InvoiceId</div>
            </div>
            <div class="info-row">
                <div class="info-label">License Number:</div>
                <div class="info-value">@license.LicenseNumber</div>
            </div>
            @if (!string.IsNullOrEmpty(payment.RazorpayPaymentId))
            {
                <div class="info-row">
                    <div class="info-label">Razorpay Payment ID:</div>
                    <div class="info-value"><code>@payment.RazorpayPaymentId</code></div>
                </div>
            }
            @if (!string.IsNullOrEmpty(payment.RazorpayOrderId))
            {
                <div class="info-row">
                    <div class="info-label">Razorpay Order ID:</div>
                    <div class="info-value"><code>@payment.RazorpayOrderId</code></div>
                </div>
            }
        </div>

        <div class="info-section">
            <h4>Customer Details</h4>
            <div class="info-row">
                <div class="info-label">Name:</div>
                <div class="info-value">@license.ApplicantName</div>
            </div>
            <div class="info-row">
                <div class="info-label">Email:</div>
                <div class="info-value">@license.ApplicantEmail</div>
            </div>
            <div class="info-row">
                <div class="info-label">Tenant ID:</div>
                <div class="info-value">@license.TenantId</div>
            </div>
        </div>

        <table class="items-table">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>License Period</th>
                    <th style="text-align: right;">Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <strong>@license.LicenseType License</strong><br/>
                        <small class="text-muted">License Number: @license.LicenseNumber</small>
                    </td>
                    <td>
                        @license.CreatedAt.ToString("MMM dd, yyyy") - @license.ExpiryDate.ToString("MMM dd, yyyy")
                    </td>
                    <td style="text-align: right;">
                        <strong>‚Çπ@payment.Amount.ToString("N2")</strong>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="total-section">
            <div class="total-label">Total Amount Paid:</div>
            <div class="total-amount">‚Çπ@payment.Amount.ToString("N2")</div>
            <div class="mt-2">
                <small>Payment Method: @payment.PaymentMethod</small>
            </div>
        </div>

        <div class="action-buttons">
            <button onclick="window.print()" class="btn btn-primary btn-lg">
                <i class="bi bi-printer"></i> Print Invoice
            </button>
            <a href="/Licenses/Details/@license.Id" class="btn btn-secondary btn-lg">
                Back to License
            </a>
        </div>

        <div class="footer">
            <p><strong>Thank you for your payment!</strong></p>
            <p>This is a computer-generated invoice and does not require a signature.</p>
            <p>For any queries, please contact support@gov2biz.com</p>
            <p class="mt-3"><small>Generated on @DateTime.UtcNow.ToString("MMMM dd, yyyy HH:mm") UTC</small></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
