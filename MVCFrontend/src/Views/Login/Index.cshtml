@model LoginRequest
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-shield-check text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-2">Welcome Back</h3>
                    <p class="text-muted">Sign in to your account</p>
                </div>

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Email or Username</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="Username" class="form-control" placeholder="you@example.com" required />
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <i class="bi bi-box-arrow-in-right"></i> Sign In
                    </button>

                    <div class="text-center">
                        <p class="text-muted">Don't have an account? <a href="/Login/Register" class="text-primary">Register here</a></p>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-4">
            <p class="text-muted small">
                <i class="bi bi-info-circle"></i> Demo Credentials:<br/>
                Username: testuser@example.com<br/>
                Password: Password123!
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Store auth data in localStorage when page loads after successful login
        $(document).ready(function() {
            // Check if we have session data to sync to localStorage
            var jwtToken = '@Context.Session.GetString("JwtToken")';
            var userEmail = '@Context.Session.GetString("UserEmail")';
            var userRoles = '@Context.Session.GetString("UserRoles")';
            var tenantId = '@Context.Session.GetString("TenantId")';
            var userId = '@Context.Session.GetInt32("UserId")';
            
            if (jwtToken && jwtToken !== '') {
                console.log('Syncing session to localStorage');
                AuthService.setAuthData({
                    accessToken: jwtToken,
                    email: userEmail,
                    roles: userRoles ? userRoles.split(',') : [],
                    tenantId: tenantId,
                    userId: userId ? parseInt(userId) : null
                });
            }
        });
    </script>
}
